{
  "name": "grid-generator",
  "version": "1.0.0",
  "description": "CSS Grid Generator with 11ty",
  "scripts": {
    "analyze": "npx vite-bundle-analyzer --mode server",
    "clean": "rm -rf _site",
    "build": "vite build && eleventy",
    "dev": "npm run clean && npm run build && concurrently -n \"11ty,watch\" -c \"blue,green\" \"eleventy --serve --port=8080\" \"chokidar 'src/**/*' --ignore 'src/assets/vite/**' -c 'npm run build && sleep 0.1 && touch _site/index.html'\""
  },
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@preact/preset-vite": "^2.10.2",
    "best-highlight": "^0.3.0",
    "chokidar-cli": "^3.0.0",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "dedent": "^1.7.0",
    "lz-string": "^1.5.0",
    "preact": "^10.27.2",
    "vite": "^7.1.6",
    "vite-bundle-analyzer": "^1.2.3",
    "water.css": "^2.1.1"
  }
}
